<a href="/event/#(event.shortname)">
    <div class="event-cell">
        <p>#(event.fullname)</p>
        #if(event.startDate != nil || event.endDate != nil) {
            <span class="date">
                #date(event.startDate, "dd MMM yyyy") - #date(event.endDate, "dd MMM yyyy")
            </span>
        } else {
            <span class="date"></span>
        }
    </div>
</a>
